<h2 class="section_title">BOOK BY THE TAG: <%=params[:search]%></h2>
<p class="create_tag">Create a book by the tag <%=params[:search]%>:</p>

<%= form_tag("/book/tag", local: true, method: "get", :class => 'search_form', :style => 'margin-left: 50px;') do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :class => 'search_submit', :name => nil%>
  </p>
<% end %>

<% if @tags.length != 0 %>
    <% @tags.each do |taged|%>
    <p>
        <%= taged.date %>
        <%= taged.text %>
        <% if taged.uploads.length != 0%>
          <% taged.uploads.each do |image| %>
            <%= image_tag image%>
          <% end %>
        <% end %>
    </p>
    <% end %>
    <% elsif params[:search] != nil && @tags.length == 0 %>
    " Sorry, there are no posts by tag "<%=params[:search] %>."
<% end %>

<div id="flipbook">
	<div class="hard"> 
  <p class="book_title" style="margin-top: 150px;">MY LIFETIME BOOK OF HAPPINESS</p> <p> ABOUT <%=params[:search] %></p>
  <p id="book_image_cover"><img src="/book.png"></p>
  </div>
<% if @tags.length != 0 %>
    <% @tags.each do |taged|%>
	<div class="pages"> 
  <%= taged.text %>
  <%= taged.date %>
  <% if taged.uploads.length != 0%>
    <% taged.uploads.each do |image| %>
      <%= image_tag image%>
    <% end %>
  <% end %>
  </div>
    <% end %>
    <% elsif params[:search] != nil && @tags.length == 0 %>
    " Sorry, there are no posts by tag "<%=params[:search] %>."
<% end %>
	<div class="hard"></div>
</div>

<script type="text/javascript">
	$("#flipbook").turn({
		width: 1000,
		height: 700,
  });
</script>

<style type="text/css">
  #flipbook {
    opacity:1;
    margin-left: 50px;
    margin-bottom: 100px;
  }

  .hard {
    background-color: #ec4b4e;
    color: white;
    font-size: 20px;
    font-family: 'Noto Sans', sans-serif;
    text-align: center;
  }

  .hard p {
    color: white;
    font-size: 20px;
    font-family: 'Noto Sans', sans-serif;
    text-transform: uppercase;
  }
  .pages {
    opacity:1;
    background-color: white;
  
  }

  #flipbook .page-wrapper{
   perspective: 2000px;
}

#flipbook .page {
border: 2px solid #ec4b4e;
}

</style>


