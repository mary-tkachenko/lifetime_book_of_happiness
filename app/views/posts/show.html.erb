<p id="notice"><%= notice %></p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<% if @post.uploads.length != 0 %>
  <p>
    <%@post.uploads.each do |image|%>
    <%= image_tag image %>
    <% end %>
  </p>
<% end %>

<p>
Tags : <% @post.tag_list.each do |tag| %>
  <a href='/tags/<%= tag %>'> <%= tag%></a>
<% end %>
</p>

<p>
  <strong>Date:</strong>
  <%= @post.date %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


