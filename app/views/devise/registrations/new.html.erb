<div id="signup_page">
<h2 class="userpage">SIGN UP</h2>
<img src="/image.png" id="page_heart">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nickname  %><br />
    <%= f.text_field :nickname, autofocus: true, :class => 'nickname' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , :class => 'email'%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => 'new_password' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'new_password' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'submit_button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
